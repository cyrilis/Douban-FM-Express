@font-face {
  font-family: 'xin';
  src: url("Xin.otf");
}
@-webkit-keyframes rotating {
  from{
    -webkit-transform: rotate(0deg);
  }
  to{
    -webkit-transform: rotate(360deg);
  }
}
body{
  font-family: "xin","Microsoft Yahei";
  margin: 0;
  padding: 0;
  width: 585px;
  height: 295px;
  overflow: hidden;
  -webkit-user-select:none;
  position: relative
}
body:before {
  content: "";
  position: absolute;
  height: 100%; width: 100%;
  background: url(../images/cover.png);
  background-size: cover;
  z-index: -1;
  -webkit-transform: scale(1);
  -webkit-transform-origin: top left;
  -webkit-filter: blur(10px);
  opacity 0.8
}
#poster
  width: 200px;
  height: 200px;
  margin: 20px 0 0 20px
  overflow hidden
  display: block;
  float: left;
  background: url(../images/cover.png);
  cursor: pointer;
  border-radius: 250px;
  -webkit-animation: rotating 10s linear infinite;
  border: 5px solid #8F8F8F;
  img
    width 100%
    height auto


#poster.paused
  animation-play-state:paused;
  -webkit-animation-play-state:paused;

h1,h2,h3,h4,h5,h6{
  font-weight: 500;
  margin: 10px 0;
}
button:hover{
  background: #ccc;
}
#title{
  padding-top: 30px;
  font-size: 25px;
  line-height: 28px;
  margin-bottom: 10px;
  padding-bottom 10px
  margin-top: 0;
  height: 28px;
  overflow: hidden;
  font-family :"xin","Microsoft YaHei";
  color: #ffffff;
  text-shadow 0 0 10px rgba(0,0,0,0.75);
  padding-left 5px
}
#artist{
  font-size: 19px;
  display: block;
  height: 24px;
  overflow: hidden;
  color: #ffffff;
  text-shadow 0 0 10px rgba(0,0,0,0.75);
  padding-left 5px
}
#album{
  font-size: 14px;
  overflow: hidden;
  height: 20px;
  display: block;
  color: #ffffff;
  text-shadow 0 0 10px rgba(0,0,0,0.75);
  padding-left 5px
}
#bar{
  height: 45px;
  width: 540px;
  background: #1f1f1f;
  position: relative;
  -webkit-user-select: none;
  -webkit-app-region: drag;
}
#right{
  width: 305px;
  float: left;
  padding-left: 30px;
}
#loginform{
  display: none;
  position: absolute;
  top: 70px;
  padding: 10px;
  padding-left: 20px;
  padding-bottom: 20px;
  border-radius: 5px;
  width: 255px;
  border: 1px solid #DDD;
  background: #FFF;
  left: 273px;
  box-shadow: 0px 0px 36px #B6B6B6;
}
#timer{
  font-size: 16px;
  color: #bfbfbf;
  float: right;
  margin-bottom: 5px;
  margin-right: 10px;
}
#vol{
  width: 20px;
  height: 70px;
  float: right;
  margin-right: 30px;
  margin-top: -50px;
  position: relative;
}
#vol:hover #vol_bar{
  display: block;
}
#vol:hover #vol_block{
  color #333
}
#vol_bar{
  display: none;
  width: 4px;
  height: 50px;
  background: #ADADAD;
  margin-left: 6px;
  border-radius: 2px;
  position: relative;
}
#vol_bar_in{
  width: 4px;
  height: 31px;
  background: #333;
  position: absolute;
  bottom: 0;
  border-radius: 2px;

}
#vol_block{
  width: 20px;
  height: 20px;
  font-size 20px;
  color #858585;
  position: absolute;
  bottom: 0;
}
#progress{
  clear: both;
  background: #aeaeae;
  height: 4px;
  width: 275px;
  display: block;
  margin: 10px 0;
}
#status{
  height: 4px;
  background: #ff6d68;
}
#controller>div{
  text-shadow: 0 0 5px #747474;
  display: inline-block;
  width: 50px;
  height: 50px;
  margin-right: 20px;
  font-size: 40px;
  color: #555;
  background: none;
  line-height: 50px;
  text-align: center;
}
#controller>div:hover{
  opacity: 0.6;
  cursor: pointer;
}
#controller #next{
  margin-right: 25px;
}
#controller #pause,#controller #next{
  font-size 45px;
  vertical-align bottom
}
#fave:hover,#fave.faved{
  color #f44a6e
}
label{
  margin-right: 10px;
  color: #333;
}
input{
  margin-bottom: 10px;
  width: 185px;
}
#login,#cancel{
  background: #fff;
  border: 1px solid #ccc;
  font-size: 16px;
  height: 25px;
  width: 60px;
  line-height: 25px;
  text-align: center;
  cursor: pointer;
  float: left;
}
#cancel:hover,#login:hover{
  background: #333;
  color: #fff;
}
#cancel{
  float: right;
  margin-right: 20px;
}
#app{
  color: #eee;
  font-size: 18px;
  margin: 0;
  padding: 10px;
  padding-left: 20px;
}
.close{
  color: #ccc;
  width: 45px;
  height: 45px;
  position: absolute;
  background: #1f1f1f;
  top: 0;
  right: 0;
  text-align: center;
  line-height: 40px;
  font-size: 45px;
  cursor: pointer;
}
.close:hover{
  color: #fff;
  background: #2f2f2f;
  -webkit-user-select: none;
  -webkit-app-region: no-drag;
}